package chapter05;

import java.util.Scanner;

public class FuncTest_06 {

	public static void EduStep(int step) {
		
		switch (step) {
		case 1:
			System.out.println("초급");
		case 2:
			System.out.println("중급");
		case 3:
			System.out.println("상급");
			
		
		}
		
	}
	
	
	
	
	public static void main(String[] args) {
		
		//입력받아서 number
		Scanner scan=new Scanner(System.in);
		System.out.print("스터디 단계를 입력하세요: ");
		int number=scan.nextInt();
		
		
		//1:초급 2:중급 3:상급
		String step=EduStep(number);
		System.out.println("현재 수업 단계는 "+step+ "단계입니다.");
	}

}
